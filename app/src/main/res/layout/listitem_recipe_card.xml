<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRecipeCard"
    android:layout_marginLeft="@dimen/padding_small"
    android:layout_marginRight="@dimen/padding_small"
    android:layout_marginTop="@dimen/padding_small"
    android:elevation="@dimen/padding_small"
    android:orientation="vertical"
    android:background="@drawable/bg_recipe_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llUserSection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="@color/colorPrimary"
            android:id="@+id/ivUserPic"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/padding_small"
                android:id="@+id/tvDisplayName"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_large"
                android:text="Joel Clarke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"></FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRecipeSection"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRecipeName"
            android:text="Spaghetti Carbonara"
            android:textColor="@color/colorGreyDark"
            android:textStyle="bold"
            android:textSize="@dimen/text_subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRecipeDescription"
            android:text="Spaghetti pasta in a white carbonara sauce, with bacon bits and mushrooms."
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivRecipePic"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<TextView-->
                <!--android:id="@+id/tvRecipeYum"-->
                <!--android:textColor="@color/colorGrey"-->
                <!--android:text="Yum"-->
                <!--android:gravity="right"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

        <!--</LinearLayout>-->
    </LinearLayout>

</LinearLayout>